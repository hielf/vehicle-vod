<%= simple_form_for([:admin, @city]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :name %>
      <%= f.input :abbr %>
      <%= f.input :sort %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
<% end %>


