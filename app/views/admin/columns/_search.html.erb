<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= search_form_for([:admin, @q], :builder => SimpleForm::FormBuilder, :defaults => {:required => false}) do |f| %>
          <div class="col-md-2">
            <%= f.input :name_cont, label: t('simple_form.labels.defaults.name') %>
          </div>
          <div class="col-md-2">
            <%= f.input :en_name_eq, label: t('simple_form.labels.defaults.en_name') %>
          </div>
          <div class="col-md-2">
            <%= f.input :status_eq, label: t('simple_form.labels.defaults.status'), collection: Column::STATUS %>
          </div>
          <div class="col-sm-2">
            <%= f.input :is_hot_eq, label: t('simple_form.labels.defaults.is_hot'), collection: [['是', true], ['否', false]] %>
          </div>
          <div class="col-md-2">
            <%= f.input :category_id_eq, label: t('simple_form.labels.defaults.category_id'), collection: Category.select(:id, :name) %>
          </div>
          <div class="padding-top-25">
            <%= f.submit '搜索', class: 'btn btn-sm btn-primary pull-right' %>
          </div>
      <% end %>
    </div>
  </div>
</div>