<%= simple_form_for([:admin, @column]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :name %>
      <%= f.input :en_name %>
      <%= f.input :keyword %>
      <%= f.input :category_id, collection: Category.select(:id, :name) %>
      <%= f.input :status, collection: Column::STATUS.map { |key, val| [key.to_s, val] } %>
      <%= f.input :is_hot %>
      <%= f.input :sort %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
<% end %>


