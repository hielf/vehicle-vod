<%= simple_form_for([:admin, @category]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :name %>
      <%= f.input :status, collection: Column::STATUS.map { |key, val| [key.to_s, val] } %>
      <%= f.input :sort %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
<% end %>


